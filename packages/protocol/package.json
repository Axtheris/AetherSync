{
  "name": "@repo/protocol",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run proto:generate && tsc",
    "dev": "tsc --watch",
    "proto:generate": "protoc --ts_out=./src --proto_path=./src transfer.proto",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "protobufjs": "^7.2.4",
    "bonjour-service": "^1.2.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "protoc-gen-ts": "^0.8.7"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  }
} 